{
  "name": "@tomassabol/dynamodb-tools",
  "version": "1.0.20",
  "description": "Tools for working with DynamoDB using AWS SDK v3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build-doc": "typedoc",
    "build": "tsc -b tsconfig.build.json",
    "clean": "rimraf dist/",
    "format-check": "prettier --check .",
    "lint": "eslint . --max-warnings 0",
    "open-coverage": "open .coverage/lcov-report/index.html",
    "prepare": "npm-run-all lint clean build",
    "test": "jest"
  },
  "dependencies": {
    "@aws-lambda-powertools/idempotency": "^2.28.1",
    "@aws-sdk/lib-dynamodb": "^3.914.0",
    "@aws-sdk/util-dynamodb": "^3.914.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/aws-lambda": "^8.10.114",
    "@types/jest": "^29.4.0",
    "@types/node": "^22.18.12",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "aws-lambda": "^1.0.7",
    "esbuild-jest": "^0.4.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-markdown": "^3.0.0",
    "jest": "^29.4.3",
    "jest-cli": "^29.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-sh": "^0.12.8",
    "rimraf": "^4.1.2",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3"
  }
}
